{
  "$schema": "https://json.schemastore.org/package.json",
  "name": "ubml",
  "version": "1.2.0",
  "description": "UBML - Unified Business Modeling Language: parsing, validation, serialization, and CLI",
  "keywords": [
    "ubml",
    "business-modeling",
    "process-modeling",
    "yaml-schema",
    "json-schema",
    "bpmn",
    "dsl",
    "validation",
    "parser",
    "serializer",
    "cli"
  ],
  "homepage": "https://github.com/TALXIS/ubml",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/TALXIS/ubml.git"
  },
  "bugs": {
    "url": "https://github.com/TALXIS/ubml/issues"
  },
  "license": "MIT",
  "author": "NETWORG (https://networg.com)",
  "type": "module",
  "bin": {
    "ubml": "./dist/cli.js"
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./node": {
      "types": "./dist/node/index.d.ts",
      "import": "./dist/node/index.js"
    },
    "./eslint": {
      "types": "./dist/eslint/index.d.ts",
      "import": "./dist/eslint/index.js"
    },
    "./generated/data": {
      "types": "./dist/generated/data.d.ts",
      "import": "./dist/generated/data.js"
    },
    "./generated/bundled": {
      "types": "./dist/generated/bundled.d.ts",
      "import": "./dist/generated/bundled.js"
    },
    "./schemas/*": "./schemas/*"
  },
  "files": [
    "dist",
    "schemas",
    "LICENSE",
    "README.md"
  ],
  "scripts": {
    "build": "npm run generate && tsup",
    "generate": "tsx scripts/generate/index.ts",
    "update-schema-versions": "tsx scripts/update-schema-versions.ts",
    "verify-versions": "tsx scripts/verify-versions.ts",
    "validate:example": "tsx bin/ubml.ts validate ./example",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:workspace": "vitest run tests/workspace",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "typecheck": "tsc --noEmit",
    "docs": "typedoc src/index.ts --out docs/api",
    "prebuild": "npm run update-schema-versions && npm run generate",
    "prepublishOnly": "npm run verify-versions && npm run build && npm run test"
  },
  "devDependencies": {
    "@types/eslint": "^9.6.1",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^8.52.0",
    "@typescript-eslint/parser": "^8.52.0",
    "eslint": "^9.39.2",
    "json-schema-to-typescript": "^15.0.4",
    "tsup": "^8.0.0",
    "tsx": "^4.21.0",
    "typedoc": "^0.25.0",
    "typescript": "^5.0.0",
    "vitest": "^4.0.16"
  },
  "dependencies": {
    "ajv": "^8.12.0",
    "ajv-formats": "^3.0.1",
    "chalk": "^5.3.0",
    "commander": "^12.0.0",
    "glob": "^13.0.0",
    "yaml": "^2.3.0"
  },
  "peerDependencies": {
    "eslint": "^8.0.0 || ^9.0.0"
  },
  "peerDependenciesMeta": {
    "eslint": {
      "optional": true
    }
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
