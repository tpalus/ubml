{
  "$schema": "https://json.schemastore.org/package.json",
  "name": "@ubml/core",
  "version": "1.0.0",
  "description": "UBML - Unified Business Modeling Language: parsing, validation, and serialization library",
  "keywords": [
    "ubml",
    "business-modeling",
    "process-modeling",
    "yaml-schema",
    "json-schema",
    "bpmn",
    "dsl",
    "validation",
    "parser",
    "serializer"
  ],
  "homepage": "https://github.com/TALXIS/ubml",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/TALXIS/ubml.git",
    "directory": "packages/core"
  },
  "bugs": {
    "url": "https://github.com/TALXIS/ubml/issues"
  },
  "license": "MIT",
  "author": "NETWORG (https://networg.com)",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./node": {
      "types": "./dist/node/index.d.ts",
      "import": "./dist/node/index.js"
    },
    "./eslint": {
      "types": "./dist/eslint/index.d.ts",
      "import": "./dist/eslint/index.js"
    },
    "./generated/metadata": {
      "types": "./dist/generated/metadata.d.ts",
      "import": "./dist/generated/metadata.js"
    },
    "./generated/bundled": {
      "types": "./dist/generated/bundled.d.ts",
      "import": "./dist/generated/bundled.js"
    },
    "./schemas/*": "../../schemas/*"
  },
  "files": [
    "dist",
    "../../schemas",
    "LICENSE",
    "README.md"
  ],
  "scripts": {
    "build": "npm run generate && tsup",
    "generate": "node --import tsx ../../bin/generate-all.ts",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint src --ext .ts",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "npm run build && npm run test"
  },
  "devDependencies": {
    "@types/eslint": "^8.56.0",
    "@types/node": "^20.0.0",
    "eslint": "^8.0.0",
    "json-schema-to-typescript": "^15.0.4",
    "tsup": "^8.0.0",
    "tsx": "^4.21.0",
    "typescript": "^5.0.0",
    "vitest": "^1.0.0"
  },
  "dependencies": {
    "ajv": "^8.12.0",
    "ajv-formats": "^3.0.1",
    "yaml": "^2.3.0"
  },
  "peerDependencies": {
    "eslint": "^8.0.0 || ^9.0.0"
  },
  "peerDependenciesMeta": {
    "eslint": {
      "optional": true
    }
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
